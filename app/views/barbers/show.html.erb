<p id="notice"><%= notice %></p>
<% if client_signed_in? %>
  <p>
    <%= link_to 'My Profile', client_path(id: current_client) %>
    <%= link_to 'My History', history_path(id: current_client), class: "pull-right" %>
  </p> 
<% end -%>
<h1>
	<%= @barber.first_name %>
</h1>
<p>
  <strong>Last name:</strong>
  <%= @barber.last_name %>
</p>
<p>
  <strong>Phone:</strong>
  <%= @barber.phone %>
</p>
<p>
  <strong>Email:</strong>
  <%= @barber.email %>
</p>
<h2>Current Openings</h2>
	<th></th>
<!-- List all openings for this barber below -->
<table>
  <tbody>
    <% @openings.each do |o| %>
      <tr>
        <td><%= o.opening.strftime("%A, %B %d, %Y - %I:%M %P") %></td>
      <% if client_signed_in? %>
        <td><%= link_to 'Select', appointments_path(barber_id: o.barber.id, client_id: current_client, opening_id: o.id), method: :post %></td>
      <% else %>
        <td><%= link_to 'Sign In', new_client_registration_path %></td>
      <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="step_1">
  <h4><%= link_to "Choose Barber", barbers_path %></h4>
</div>
<div class="step_2">
  <h4><%= link_to "Choose Schedule", barber_path %></h4>
</div>
<div class="step_3">
  <h4>Reserve</h4>
</div>
<!-- if current user is barber ONLY allow barber to add OWN Openings -->
<%= link_to 'Add New Opening', new_barber_opening_path(@barber) %> |
<%= link_to 'Back', barbers_path %>
